<div class="d-flex flex-wrap justify-content-around pt-5 pl-5 pr-5">
  {{#each games as |game|}}
      <div>
        <div class="card text-center" style="width: 16rem; height: 470px; background-color: rgb(205,133,63,0.30); border-color: saddlebrown;">
          <a href="/games/{{game.game.id}}"><img src="{{game.imageURL}}" class="card-img-top" alt="{{game.name}}" height="300"></a>
          <div class="card-body">
            <a href="/games/{{game.game.id}}"><h5 class="card-title" style="text-transform: capitalize; height: 80px"><strong>{{game.name}}</strong></h5></a>
            <div class="d-flex d-wrap justify-content-center">
              <form action="/games/{{game.id}}/add" method="POST">
                <button class="btn btn-success mr-3" type="submit">Add it!</button>
              </form>
              <form action="/games/{{game.id}}/wish" method="POST">
                <button class="btn btn-primary ml-3" style="color: white" type="submit">Wish it!</button>
              </form>
            </div>
          </div>
        </div>
      </div>
  {{/each}}
</div>
