<div class="d-flex d-wrap justify-content pt-5 pl-5 pr-5" style="border: black solid 2px; height: 500px">
  <div><img class="user-profile-img" src="{{ user.avatarURL }}" alt="user avatar"></div>
  <div>
    <p>Is the owner of {{#ownerNumber user.games }}{{/ownerNumber}} games</p>
    <p>Wants {{#wishNumber user.games }}{{/wishNumber}} games</p>
    <p>Exchange {{#exchangeNumber user.games }}{{/exchangeNumber}} games</p>
    <p>Usually plays in {{ user.city }}</p>
    <p>Age: {{user.age}}</p>
    <p>Follows {{#followNumber user.network }}{{/followNumber}} users</p>
  </div>
</div>
<div class="d-flex flex-wrap justify-content-around pt-5 pl-5 pr-5">
  <h2>{{user.username}} owned games</h2>
  {{#each user.games as |game|}}
    {{#if_eq game.owned true}}
      <a href="/games/{{game.game.id}}" class="card-link m-2">
        <div>
          <div class="card text-center" style="width: 16rem; height: 470px; background-color: rgb(205,133,63,0.30); border-color: saddlebrown;">
            <img src="{{game.game.imageURL}}" class="card-img-top" alt="{{game.game.name}}" height="300">
            <div class="card-body">
              <h5 class="card-title" style="text-transform: capitalize; height: 80px"><strong>{{game.game.name}}</strong></h5>
            </div>
          </div>
        </div>
      </a>
    {{/if_eq}}
  {{/each}}
</div>
